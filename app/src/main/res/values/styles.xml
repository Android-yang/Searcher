<resources>

    <!-- Base application theme. -->
    <style name="AppThemeTranslucent" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--解决Activity切换时状态栏文字闪动问题-->
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeFullScreen" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>


    <!--dialog进入退出动画-->
    <style name="DialogEnterOut1">
        <item name="android:windowEnterAnimation">@anim/anim_bottom_2_top</item>
        <item name="android:windowExitAnimation">@anim/anim_view_top_2_bottom</item>
    </style>

    <style name="DialogEnterOut2">
        <item name="android:windowEnterAnimation">@anim/anim_bottom_2_top</item>
        <item name="android:windowExitAnimation">@anim/anim_right_2_left</item>
    </style>

    <style name="DialogEnterOut3">
        <item name="android:windowEnterAnimation">@anim/anim_top_2_bottom</item>
        <item name="android:windowExitAnimation">@anim/anim_right_2_left</item>
    </style>

    <style name="DialogEnterOut4">
        <item name="android:windowEnterAnimation">@anim/anim_bottom_2_top</item>
        <item name="android:windowExitAnimation">@anim/anim_view_top_2_bottom</item>
    </style>

    <!--个人中心 item-->
    <style name="me_item_property">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/activity_horizontal_margin</item>
    </style>

    <!--个人中心 item setting-->
    <style name="me_item_setting">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">@dimen/dp10</item>
        <item name="android:paddingTop">@dimen/dp10</item>
        <item name="android:textColor">@color/c_2c241f</item>
        <item name="android:drawablePadding">@dimen/activity_horizontal_margin</item>
    </style>
    <!--个人中心 item recommend-->
    <style name="me_item_recommend" parent="me_item_setting"></style>

    <style name="AppThemeTranslucent.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppThemeTranslucent.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
