<resources>

    <!-- Base application theme. -->
    <style name="AppThemeTranslucent" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--解决Activity切换时状态栏文字闪动问题-->
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!--dialog进入退出动画-->
    <style name="DialogEnterOut1">
        <item name="android:windowEnterAnimation">@anim/anim_bottom_2_top</item>
        <item name="android:windowExitAnimation">@anim/anim_view_top_2_bottom</item>
    </style>

    <style name="DialogEnterOut2">
        <item name="android:windowEnterAnimation">@anim/anim_bottom_2_top</item>
        <item name="android:windowExitAnimation">@anim/anim_right_2_left</item>
    </style>

    <style name="DialogEnterOut3">
        <item name="android:windowEnterAnimation">@anim/anim_top_2_bottom</item>
        <item name="android:windowExitAnimation">@anim/anim_right_2_left</item>
    </style>
</resources>
